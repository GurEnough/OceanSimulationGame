<Window x:Class="OceanWPFVersion.SettingsEditWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OceanWPFVersion"
        mc:Ignorable="d"
        Title="Settings" Height="400" Width="550" >

    <Grid Name="mainGrid" >
        <Grid.Background>
            <ImageBrush ImageSource="/img/background.png"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="215*"/>
            <ColumnDefinition Width="214*"/>
            <ColumnDefinition Width="121*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="saveButton" Click="OnSave" Grid.Row="4" Grid.Column="2" Height="30" Foreground="#FF2CC5A0" FontFamily="Algerian" BorderBrush="White" VerticalAlignment="Center" Margin="20,0,20,0" Background="{x:Null}">Save</Button>

    </Grid>
    
</Window>
